{
    "AZDS-LAUNCH": [
        {
            "name": "Launch Server (AZDS)",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "preLaunchTask": "azds: prelaunch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "azds",
            "runtimeArgs": [
                "exec",
                "--on-exit-resume-up",
                "--",
                "node",
                "--inspect=0.0.0.0:9229",
                "--inspect-brk",
                "--nolazy",
                "$mainJS$"
            ],
            "address": "127.0.0.1",
            "port": $randomPort1$,
            "localRoot": "$workspaceFolder$",
            "remoteRoot": "/app"
        }
    ],
    "AZDS-WATCH-ATTACH": [
        {
            "name": "Attach to Server (AZDS)",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "preLaunchTask": "azds: preattach",
            "cwd": "${workspaceFolder}",
            "address": "127.0.0.1",
            "port": $randomPort1$,
            "localRoot": "$workspaceFolder$",
            "remoteRoot": "/app",
            "restart": true
        }
    ]
}